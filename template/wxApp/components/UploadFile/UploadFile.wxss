.upload {
    width: calc(100% + 20rpx);
    display: flex;
    flex-wrap: wrap;
}

.item {
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 150rpx;
    width: 150rpx;
    box-sizing: border-box;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    border-radius: 8rpx;
    border-radius: 8rpx;
    position: relative;
}

.item-image {
    width: 100%;
    height: 100%;
    border-radius: 8rpx;
}

.item-icon {
    position: absolute;
    right: -3px;
    top: -3px;
    background-color: white;
    border-radius: 50%;
}

.item-holder {
    border: 1rpx dashed #8E9199;
}

.item-camera {
    width: 35rpx;
}
.placeholder {
    margin-top: 12rpx;
    font-size: 22rpx;
    color: #8E9199;
}